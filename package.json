  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "author": "",
  "license": "ISC",
  "private": true,
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/koa": "^2.0.52",
    "@types/koa-router": "^7.0.42",
    "@types/node": "^12.12.7",
    "coveralls": "^3.0.7",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.2",
    "prettier": "^1.19.1",
    "reflect-metadata": "^0.1.13",
    "release-it": "^12.4.3",
    "source-map-support": "^0.5.16",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.5.0",
    "tslib": "^1.10.0",
    "tslint": "^5.20.1",
    "typescript": "^3.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && pnpm recursive run prepare",
      "pre-push": "pnpm t"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ],
    "*.ts?(x)": [
      "pnpm run prettier",
      "git add"
    ]
  },
  "scripts": {
    "test": "jest",
    "lint": "tslint --project .",
    "rprepare": "pnpm recursive run prepare",
    "pretest": "pnpm recursive run prepare",
    "coveralls": "cat coverage/lcov.info | coveralls",
    "release": "pnpm recursive --workspace-concurrency 1 --filter ./packages exec -- pnpx release-it -c `pwd`/.release-it.yaml --non-interactive",
    "prettier": "prettier --write --parser typescript \"packages/**/*.ts?(x)\" \"examples/**/*.ts?(x)\""
  }
}
